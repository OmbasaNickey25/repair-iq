{
  "version": 2,
  "name": "repair-iq-frontend",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "public"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://your-render-backend.onrender.com"
  }
}
