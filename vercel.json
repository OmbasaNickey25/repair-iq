{
  "version": 2,
  "name": "repair-iq-pwa",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/main.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "PORT": "3000",
    "NODE_ENV": "production",
    "TFJS_MODEL_PATH": "./tfjs_model/model.json",
    "ENABLE_LOGGING": "true"
  },
  "functions": {
    "backend/main.js": {
      "maxDuration": 30
    }
  },
  "installCommand": "npm install",
  "buildCommand": "npm run build",
  "outputDirectory": "public"
}
